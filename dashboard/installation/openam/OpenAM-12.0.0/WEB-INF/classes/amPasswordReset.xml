<!DOCTYPE ServicesConfiguration
    PUBLIC "=//iPlanet//Service Management Services (SMS) 1.0 DTD//EN"
    "jar://com/sun/identity/sm/sms.dtd">

<ServicesConfiguration>
    <Service name="iPlanetAMPasswordResetService" version="1.0">
        <Schema
            serviceHierarchy="/DSAMEConfig/iPlanetAMPasswordResetService"
            i18nFileName="amPasswordReset"
            i18nKey="iplanet-am-password-reset-service-description"
	    revisionNumber="20">

	    <Organization>
		<AttributeSchema name="RequiredValueValidator"
		    type="validator"
		    syntax="string">
		    <DefaultValues>
			<Value>com.sun.identity.sm.RequiredValueValidator</Value>
		    </DefaultValues>
		</AttributeSchema>

                <AttributeSchema name="iplanet-am-password-reset-userValidate"
                    type="single"
                    syntax="string"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p101">
                    <DefaultValues>
                        <Value>uid</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="openam-am-password-reset-invalidchar-regex"
                    type="single"
                    syntax="string"
                    any="display"
                    i18nKey="p121">
                    <DefaultValues>
                        <Value>[\*\(\)_%\W]</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-question"
                    type="list"
                    syntax="string"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p102">
                    <DefaultValues>
                        <Value>favourite-restaurant</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-searchFilter"
                    type="single"
                    syntax="string"
                    any="display"
                    i18nKey="p103">
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-baseDN"
                    type="single"
                    syntax="string"
                    any="display"
                    i18nKey="p104">
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-bindDN"
                    type="single"
                    syntax="string"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p105">
		    <DefaultValues>
			<Value>&#x00A0;</Value>
		    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-bindPasswd"
                    type="single"
                    syntax="password"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p106">
		    <DefaultValues>
			<Value>&#x00A0;</Value>
		    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-option"
                    type="single"
                    syntax="string"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p107">
                    <DefaultValues>
                        <Value>com.sun.identity.password.plugins.RandomPasswordGenerator</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-notification"
                    type="single"
                    syntax="string"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p108">
                    <DefaultValues>
                        <Value>com.sun.identity.password.plugins.EmailPassword</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-enabled"
                    type="single"
                    syntax="boolean"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p109">
                    <DefaultValues>
                        <Value>true</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-user-personal-question"
                    type="single"
                    syntax="boolean"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p110">
                    <DefaultValues>
                        <Value>false</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-max-num-of-questions"
                    type="single"
                    syntax="number_range"
                    rangeStart="1" rangeEnd="5"
                    any="required|display"
		    validator="RequiredValueValidator"
                    i18nKey="p111">
                    <DefaultValues>
                        <Value>1</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-force-reset"
                    type="single"
                    syntax="boolean"
                    any="display"
                    i18nKey="p111.1">
                    <DefaultValues>
                        <Value>false</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-failure-lockout-mode"
                    type="single"
                    syntax="boolean"
                    i18nKey="p112">
                    <DefaultValues>
                        <Value>false</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-failure-count"
                    type="single"
                    syntax="number_range"
                    rangeStart="0" rangeEnd="2147483647"
                    i18nKey="p113">
                    <DefaultValues>
                        <Value>5</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-failure-duration"
                    type="single"
                    syntax="number_range"
                    rangeStart="1" rangeEnd="2147483647"
                    i18nKey="p114">
                    <DefaultValues>
                        <Value>300</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-lockout-email-address"
                    type="single"
                    syntax="string"
                    i18nKey="p115">
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-lockout-warn-user"
                    type="single"
                    syntax="number_range"
                    rangeStart="0" rangeEnd="2147483647"
                    i18nKey="p116">
                    <DefaultValues>
                        <Value>4</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-lockout-duration"
                    type="single"
                    syntax="number_range"
                    rangeStart="0" rangeEnd="2147483647"
                    i18nKey="p117">
                    <DefaultValues>
                        <Value>0</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-lockout-attribute-name"
                    type="single"
                    syntax="string"
                    i18nKey="p118">
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-password-reset-lockout-attribute-value"
                    type="single"
                    syntax="string"
                    i18nKey="p119">
                </AttributeSchema>
                <AttributeSchema name="openam-password-reset-mail-attribute-name"
                    type="single"
                    syntax="string"
                    i18nKey="p120">
                    <DefaultValues>
                        <Value>mail</Value>
                    </DefaultValues>
                </AttributeSchema>
	    </Organization>
        </Schema>
    </Service>
</ServicesConfiguration>
