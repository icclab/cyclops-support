<!DOCTYPE ModuleProperties PUBLIC "=//iPlanet//Authentication Module Properties XML Interface 1.0 DTD//EN"
        "jar://com/sun/identity/authentication/Auth_Module_Properties.dtd">


<ModuleProperties moduleName="LDAP" version="1.0" >
    <Callbacks length="2" order="1" timeout="120" header="Auf diesem Server kommt die LDAP-Authentifizierung zum Einsatz." >
        <NameCallback>
            <Prompt>Benutzername</Prompt>
        </NameCallback>
        <PasswordCallback echoPassword="false" >
            <Prompt>Passwort:</Prompt>
        </PasswordCallback>
    </Callbacks>
    <Callbacks length="4" order="2" timeout="120" header="Passwort ändern&lt;BR&gt;&lt;/BR&gt;#REPLACE#&lt;BR&gt;&lt;/BR&gt;" >
        <PasswordCallback echoPassword="false" >
            <Prompt>Altes Passwort</Prompt>
        </PasswordCallback>
        <PasswordCallback echoPassword="false" >
            <Prompt>Neues Passwort</Prompt>
        </PasswordCallback>
        <PasswordCallback echoPassword="false" >
            <Prompt>Passwort bestätigen</Prompt>
        </PasswordCallback>
        <ConfirmationCallback>
            <OptionValues>
                <OptionValue>
                    <Value>Senden</Value>
                </OptionValue>
                <OptionValue>
                    <Value>Abbrechen</Value>
                </OptionValue>
            </OptionValues>
        </ConfirmationCallback>
    </Callbacks>
    <Callbacks length="0" order="3" timeout="120" header=" Ihr Passwort ist abgelaufen. Kontaktieren Sie das Service-Desk, damit Ihr Passwort zurückgesetzt werden kann." error="true"  />
    <Callbacks length="0" order="4" timeout="120" template="user_inactive.jsp" error="true"/>
    <Callbacks length="0" order="5" timeout="120" header=" Your account is locked. Please contact service desk to unlock your account" error="true" />

</ModuleProperties>
